public class ATMBalance {
    public static void main(String[] args) {
        int n1 = 500, d1 = 4, n2 = 100, d2 = 20, n3 = 200, d3 = 32, n4 = 2000, d4 = 1;

        // Calculating the total available balance
        int total = (n1 * d1) + (n2 * d2) + (n3 * d3) + (n4 * d4);

        // Displaying the total available balance
        System.out.println("Total Available Balance in ATM: " + total);
    }
}
